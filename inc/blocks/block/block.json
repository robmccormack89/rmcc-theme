{
  "name": "acf/rmcc-block",
  "title": "RMcC Block",
  "description": "A card block built using ACF & Timber/Twig.",
  "category": "rmcc",
  "icon": "admin-comments",
  "keywords": ["rmcc", "card"],

  "acf": {
    "mode": "preview",
    "renderTemplate": "block.php"
  },

  "style": [ "file:./block.css" ],

  "supports": {

    "mode": true,
    "jsx": true,

    "html": true,
    "anchor": true,
    "multiple": true,

    "className": true,
    "customClassName": true,
    "defaultStylePicker": true,
    "inserter": true,
    "reusable": true,
    "lock": true,

    "align": true,
    "alignContent": "matrix",

    "fullHeight": true,

    "dimensions": {
      "minHeight": true
    },

    "spacing": {
      "margin": true,
      "padding": true
    },

    "background": {
      "backgroundImage": true,
      "backgroundSize": true
    },

    "color": {
      "background": true,
      "gradients": true
    },

    "shadow": true,

    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true,
      "__experimentalDefaultControls": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true
      }
    }

  },
  
  "example": {
    "attributes": {
      "preview": true
    }
  },

  "attributes": {
    "style": {
      "type": "object",
      "default": {
        "spacing": {
          "margin": {
            "bottom": "0rem",
            "top": "0rem"
          }
        }
      }
    },
    "alignContent": {
      "type": "string",
      "default": "none"
    }
  }

}