{
  "name": "acf/card",
  "title": "RMcC Card",
  "description": "A card (rmcc-card) block built using ACF & Timber/Twig.",
  "category": "rmcc",
  "icon": "admin-comments",
  "keywords": ["rmcc", "card"],

  "acf": {
    "mode": "preview",
    "renderTemplate": "card.php"
  },
  
  "attributes": {
    "style": {
      "type": "object",
      "default": {
        "spacing": {

          "__margin": {
            "bottom": "0rem",
            "top": "0rem"
          },

          "__padding": "0rem",

          "blockGap": "100px"

        }
      },
      "___background": {
        "backgroundImage": {
          "url":"https://picsum.photos/1920/1200"
        },
        "backgroundPosition":"50% 50%",
        "backgroundSize": "contain"
      }
    }
  },

  "example": {
    "attributes": {
      "preview": true
    }
  },

  "supports": {

    "__base": "",
    "mode": true,
    "jsx": true,

    "__defaults": "",
    "html": true,
    "anchor": true,
    "multiple": true,

    "__more_defaults": "",
    "className": true,
    "customClassName": true,
    "defaultStylePicker": true,
    "inserter": true,
    "reusable": true,
    "lock": true,

    "__controls": "",

    "align": true,
    "fullHeight": true,
    "color": {
      "background": true,
      "gradients": true,
      "__not_working_yet": "",
      "text": false,
      "link": false,
      "heading": false,
      "button": false,
      "enableContrastChecker": false
    },
    "alignContent": false,
    "alignText": false,
    "typography": {
      "fontSize": false,
      "lineHeight": false
    },


    "__appearance-tools": "add_theme_support",
    "background": {
      "backgroundImage": true,
      "backgroundSize": true
    },
    "spacing": {
      "margin": true,
      "blockGap": true,
      "__custom-spacing": "add_theme_support",
      "padding": true
    }


  }

}