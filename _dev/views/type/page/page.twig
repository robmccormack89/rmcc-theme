{# translation-ready, escaped, formatted, semantic #}
{% extends "base.twig" %}

{% block header %}
  <header class="uk-inline">
    <div class="header-top-nav uk-position-top uk-position-z-index">
      <div uk-sticky="animation: uk-animation-slide-top; sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent; top: 200">
        {% include 'header-nav.twig' %}
      </div>
    </div>
    <div class="uk-section uk-section-large uk-section-muted theme-border-bottom">
      {% block single_header_content %}
        <div class="uk-container uk-container-small uk-text-center">
          <h1 class="uk-margin-large-top">{{post.title|e('esc_html')}}</h1>
        </div>
      {% endblock %}
    </div>
  </header>
{% endblock %}

{% block contentwrap %}
  <!-- single page content -->
  <article id="Page-{{post.id|e('esc_html')}}" class="uk-section {{post.class|e('esc_html')}}">
    <section class="single-content uk-container uk-container-xsmall">
      {{post.content}}
    </section>
  </article>
{% endblock %}