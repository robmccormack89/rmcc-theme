{% extends "base.twig" %}

{% block header %}
  <header class="uk-inline">
    <div class="header-top-nav uk-position-top uk-position-z-index">
      <div uk-sticky="animation: uk-animation-slide-top; sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent uk-light; top: 200">
        {% include 'header-nav.twig' %}
      </div>
    </div>
    <img class="cover-img home-cover-img" 
    data-src="{{post.thumbnail.src|resize(1920)|default(options.site_featured_image.url|resize(1920))|default(theme.link ~ '/assets/images/place1.jpg')|e('esc_url')}}" 
    alt="{{post.thumbnail.alt|default(options.site_featured_image.alt)|e('esc_html')}}" 
    data-width data-height uk-img>
    <div class="uk-overlay-primary uk-position-cover">
      <div class="uk-position-center">
        <div class="uk-text-center uk-container uk-container-xsmall uk-padding">
          <h1 class="uk-margin-large-top">{{ _x('Lorem ipsum dolor sit amet consectetur', 'Homepage hero title', 'serchek-theme')|e('esc_html') }}</h1>
          <hr class="uk-divider-small">
          <p class="uk-text-emphasis uk-text-lead uk-margin-medium-bottom">{{ _x('Lorem ipsum dolor sit amet', 'Homepage hero sub-title', 'serchek-theme')|e('esc_html') }}</p>
          <a href="#Next" class="uk-button uk-button-primary uk-button-large scroll">{{ _x('Learn more', 'Homepage hero button text', 'serchek-theme')|e('esc_html') }}</a>
        </div>
      </div>
    </div>
  </header>
{% endblock %}

{% block contentwrap %}

  <!-- under hero section -->
  <section id="Next" class="uk-section uk-section-primary">
    <div class="uk-text-center uk-container uk-container-xsmall">
      <h2 class="uk-h3">{{ _x('Lorem ipsum dolor sit amet', 'Homepage under-hero title', 'serchek-theme')|e('esc_html') }}</h2>
      <p>{{ _x('Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor. Consectetur adipisicing elit, sed do eiusmod tempor.', 'Homepage under-hero message', 'serchek-theme')|e('esc_html') }}</p>
      <a class="feature-link uk-text-uppercase scroll" href="{{ _x('#Latest', 'Homepage under-hero link url', 'serchek-theme') }}">
        {{ _x('Click here', 'Homepage under-hero link text', 'serchek-theme')|e('esc_html') }}
      </a>
    </div>
  </section>
  
  <!-- home page editor content -->
  {# post.content #}
  
{% endblock %}