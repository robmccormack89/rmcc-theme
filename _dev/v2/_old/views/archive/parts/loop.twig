{# the archive loop: main 2 wrappers & ids are for blog filters #}
<section id="TheLoopContainer" class="rmcc-position-relative">
  <div id="TheLoop" class="products-loop rmcc-position-relative">

    {% if archive.posts is not empty %}

      {# the actual posts loop. the wrapper & id here are again used for blog filters #}
      <div id="PostsGrid" class="archive-posts filters-container" rmcc-grid>
        {% for post in archive.posts %}
          {% include fn('post_password_required', post) ? 'tease_protected.twig' : 'tease.twig' with {post: post, preview_length: 28, w: 1200} %}
        {% endfor %}
      </div>

      {# the archive footer with pagination. only when archive.posts is not empty, which makes sense #}
      {% block archive_footer %}
        {% include 'archive_footer.twig' %}
      {% endblock %}

    {% else %}

      {# empty posts result. uses same id #}
      <div id="PostsGrid">
        <p class="rmcc-text-emphasis">{{ _x('Sorry, there has been an error locating a resource for your query. Please try again.', 'Archive: No posts', 'basic-theme')|e('esc_html') }}</p>
      </div>

    {% endif %}

  </div>
</section>