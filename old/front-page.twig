    </div>
  </section>
{% endblock %}

{% block spec_scripts %}
  <!-- load in swiper-js js -->
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script src="{{theme.link}}/assets/js/front.js"></script>
{% endblock %}