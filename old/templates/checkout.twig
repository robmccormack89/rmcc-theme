{% extends "base.twig" %}

{% block spec_styles %}
  <!-- shop styles -->
  <link rel="stylesheet" href="{{theme.link|e('esc_url')}}/assets/css/checkout.css" />
{% endblock %}

{% block pageheader %}
  {% include 'header-page.twig' %}
{% endblock %}

{% block contentwrap %}
  <div class="uk-container" data-template="checkout.twig" data-block="contentwrap">
    {{ post.content|e('wp_kses_post') }}
  </div>
{% endblock %}

{% block abovefooter %}
  {% include 'above-footer-page.twig' %}
{% endblock %}

{% block spec_scripts %}
  <script type='text/javascript' src='{{theme.link|e('esc_url')}}/assets/js/woo/checkout.js'></script>
{% endblock %}