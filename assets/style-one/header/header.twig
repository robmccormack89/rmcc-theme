<!-- header -->
<header id="SiteHeader" data-template="header.twig" uk-sticky>
  <div class="uk-container">

    <!-- header nav transparent -->
    <nav class="desktop-nav uk-navbar-transparent uk-visible@s" data-uk-navbar>

      <!-- logo -->
      <div class="uk-navbar-left">
        {% if theme_logo_url %}
        <a class="" title="{{ site.title }}" href="{{ site.url }}"><img data-src="{{ theme_logo_url }}" style="width: 210px;" uk-img></a>
        {% else %}
        <a class="uk-navbar-item uk-logo uk-padding-remove uk-text-bold uk-text-emphasis" title="{{ site.title }}" href="{{ site.url }}">{{ site.title }}</a>
        {% endif %}
      </div>

      <!-- main menu & cart/login button -->
      <div class="uk-navbar-right">
        <!-- main menu -->
        <ul class="uk-navbar-nav">
          {% if has_menu_main %}
          {% for item in menu_main.get_items %}
          {% if item.get_children %}
          <li class="{{ item.classes | join(' ') }}"><a href="{{ item.link }}">{{ item.title }}<span data-uk-icon="icon: triangle-down"></span></a>
            <div class="uk-navbar-dropdown">
              <ul class="uk-nav uk-navbar-dropdown-nav">
                {% for child in item.get_children %}
                <li><a href="{{ child.get_link }}">{{ child.title }}</a>
                  {% if child.children %}
                  <ul class="uk-nav-sub">
                    {% for third in child.children %}
                    <li>
                      <a href="{{ third.get_link }}">{{ third.title }}</a>
                    </li>
                    {% endfor %}
                  </ul>
                  {% endif %}
                </li>
                {% endfor %}
              </ul>
            </div>
          </li>
          {% else %}
          <li class="{{ item.classes | join(' ') }}"><a href="{{ item.get_link }}">{{ item.title }}</a></li>
          {% endif %}
          {% endfor %}
          {% else %}
          <li>Add a menu to the Main Menu slot in Appearance > Menus.</li>
          {% endif %}
        </ul>
        {% if not user %}
        <!-- login modal for non logged in user -->
        <div class="uk-navbar-item">
          <a class="uk-button uk-button-primary uk-button-small" href="#modal-container" uk-toggle>Login / Register</a>
        </div>
        {% else %}
        <!-- cart button -->
        <div class="uk-navbar-item">
          <a href="/cart" data-uk-icon="icon:cart;ratio:2" class="cart-icon uk-icon pull-right-15 uk-light" aria-expanded="false"></a>
          {% do action('cart_ajax_result_count') %}
        </div>
        {% endif %}
      </div>

    </nav>

    <!-- mobile nav -->
    <nav class="mobile-nav uk-navbar-transparent uk-hidden@s" data-uk-navbar>

      <div class="uk-navbar-left pull-left-15">
        <a class="uk-navbar-toggle uk-navbar-item uk-text-emphasis" data-uk-toggle data-uk-navbar-toggle-icon href="#mobile-offcanvas"><span class="uk-flex-last push-left-7">Menu</span></a>
      </div>

      <div class="uk-navbar-right pull-right-15">
        {% if not user %}
        <!-- login modal for non logged in user -->
        <div class="uk-navbar-item">
          <a class="uk-button uk-button-primary uk-button-small" href="#modal-container" uk-toggle>Login / Register</a>
        </div>
        {% else %}
        <!-- cart button -->
        <div class="uk-navbar-item">
          <a href="/cart" data-uk-icon="icon:cart;ratio:1.5" class="cart-icon uk-icon uk-light" aria-expanded="false"></a>
          {% do action('cart_ajax_result_count') %}
        </div>
        {% endif %}
      </div>

    </nav>

    <!-- modal login form -->
    <div id="modal-container" class="login-modal uk-modal-container" uk-modal>
      <div class="uk-modal-dialog uk-modal-body">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        {% do action('woo_login_form') %}
      </div>
    </div>

    <!-- mobile offcanvas -->
    <div data-uk-offcanvas="flip: true; overlay: true" id="mobile-offcanvas">
      <div class="uk-offcanvas-bar uk-offcanvas-bar-animation uk-offcanvas-slide">
        <button class="uk-offcanvas-close uk-close uk-icon" data-uk-close type="button" title="Close the Mobile Menu"><span class="uk-hidden">Close</span></button>
        {% if theme_logo_url %}
        <div class="uk-margin-bottom">
          <a class="" title="{{ site.title }}" href="{{ site.url }}"><img data-src="{{ theme_logo_url }}" style="width: 250px;" uk-img></a>
        </div>
        {% else %}
        <a class="uk-navbar-item uk-logo uk-padding-remove uk-text-bold uk-text-emphasis" title="{{ site.title }}" href="{{ site.url }}">{{ site.title }}</a>
        {% endif %}
        <ul class="uk-nav uk-nav-default uk-nav-parent-icon" uk-nav>
          {% if has_menu_mobile %}
          {% for item in menu_mobile.get_items %}
          {% if item.get_children %}
          <li class="uk-parent {{ item.classes | join(' ') }}">
            <a href="{{ item.get_link }}">{{ item.title }}</a>
            <ul class="uk-nav-sub">
              {% for child in item.get_children %}
              <li>
                <a href="#">{{ child.title }}</a>
              </li>
              {% endfor %}
            </ul>
          </li>
          {% else %}
          <li class="{{ item.classes | join(' ') }}">
            <a href="{{ item.get_link }}">{{ item.title }}</a>
          </li>
          {% endif %}
          {% endfor %}
          {% else %}
          <li>Add a menu to the Mobile Menu slot in Appearance > Menus.</li>
          {% endif %}
          <li class="uk-nav-divider"></li>
        </ul>
        {% if not user %}
        <a class="uk-button uk-button-primary uk-width-1-1" href="#modal-container" uk-toggle>Login / Register</a>
        {% else %}
        <a class="uk-button uk-button-primary uk-width-1-1" href="/competitions">Play Now</a>
        {% endif %}
      </div>
    </div>

  </div>
</header>
<!-- /header section -->