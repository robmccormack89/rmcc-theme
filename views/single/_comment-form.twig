{% import "snippets.twig" as snippets %}

<div class="comment-form">
  <form class="comment-form" id="comment-form-box" method="post" action="{{ site.site_url ~ '/wp-comments-post.php' }}">
    <fieldset class="uk-fieldset">
      {% if user %}
        <input type="hidden" name="email" value="{{ user.email }}">
        <input type="hidden" name="author" value="{{ user.name }}">
        <input type="hidden" name="url" value="{{ user.link }}">
      {% else %}
        <div class="uk-margin-small">
          <div class="uk-grid-small" uk-grid>
            <div class="uk-width-1-2@s">
              <input class="uk-input" required name="author" type="text" placeholder="{{ snippets.comment_name }}">
            </div>
            <div class="uk-width-1-2@s">
              <input class="uk-input" required name="email" type="email" id="email" placeholder="{{ snippets.comment_email }}">
            </div>
          </div>
        </div>
        <div class="uk-margin-small">
          <input class="uk-input" name="url" type="url" placeholder="{{ snippets.comment_web }}">
        </div>
      {% endif %}
      <textarea id="comment-form-box" class="uk-textarea" name="comment" placeholder="{{ snippets.comment_leave }}" cols="60" rows="8"></textarea>
      <input name="comment_post_ID" value="{{ post.id }}" type="hidden">
      <input name="comment_parent" value="{{ comment.id|default('0') }}" type="hidden">
      <div class="uk-margin-top">
        <button type="submit" name="Submit" class="uk-button uk-button-small uk-button-primary">{{ snippets.comment_send }}</button>
        <button type="reset" class="uk-button uk-button-small uk-button-default">{{ snippets.comment_clear }}</button>
      </div>
    </fieldset>
  </form>
</div>