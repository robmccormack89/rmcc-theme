{% extends "custom.twig" %}
{% import "functions.twig" as functions %}

{% block single_header %}
  {% if template_page_header == 'default' %}
    {{ functions.single_header(post, 'category', true, { wrap_class: margins.meta_container ~ ' uk-text-' ~ template_page_header_align, terms_linked: true, meta_linked: true, title_linked: false }) }}
  {% elseif template_page_header == 'image' %}
    {% set single_header_image_args = {
      align: template_page_header_align, 
      img_content_container: margins.header_img_content_container, 
      content_margin: (template_header == 'transparent') ? 'uk-margin-large-top' : null, 
      w: 1920, 
      h: 400, 
      min_height: 300, 
      terms_linked: true, 
      meta_linked: true, 
      title_linked: false
    } %}
    {{ functions.single_header_image(post, 'category', true, single_header_image_args) }}
  {% endif %}
{% endblock %}

{% block single_footer %}
  {% if template_page_footer == 'default' %}
    {{ functions.single_footer(_context, { share: true, pagi: true, comments: true, class: 'article-footer ' ~ margins.meta_container ~ ' ' ~ section_class }) }}
  {% endif %}
{% endblock %}