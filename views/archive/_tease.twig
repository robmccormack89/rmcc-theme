{% import "functions.twig" as functions %}

<article id="Post-{{ post.id|e('html_attr') }}" class="uk-section {{ post.class|e('esc_html') }}">
  
  {% block tease_header %}
    {{ functions.single_header(post, null, false, {title_linked: true, class: 'no-padding'}) }}
  {% endblock %}
  
  {% block tease_thumb %}
    {{ functions.featured_img(post.thumbnail, {w: 1200, h: 400, container: 'uk-container uk-margin-large-top'}) }}
  {% endblock %}
  
  {% block tease_content_protected %}
    {{ functions.the_tease_content(_context, {password_content_wrap: 'uk-container uk-container-xsmall uk-margin-large'}) }}
  {% endblock %}

</article>