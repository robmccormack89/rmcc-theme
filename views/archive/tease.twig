<article id="{{ post.post_type|e('esc_html') }}-{{ post.id|e('esc_html') }}" class="rmcc-article item {{ post.class|e('esc_html') }}" data-template="tease.twig">

  {% block tease_thumb %}
    {% if post.thumbnail %}
      <figure>
        <a title="{{ post.thumbnail.title|e('esc_html') }}" href="{{ post.link|e('esc_url') }}">
          <img src="{{ post.thumbnail.src|resize(w|default(600), h|default(null), pos|default(null))|e('esc_url') }}" 
          width="{{ w|default(600) }}" alt="{{ post.thumbnail.alt|e('esc_html') }}">
        </a>
      </figure>
    {% endif %}
  {% endblock %}

  {% block tease_title %}
    <h2 class="rmcc-h3 rmcc-article-title rmcc-margin-small">
      <a class="rmcc-link-heading" title="{{ post.title|e('esc_html') }}" href="{{ post.link|e('esc_url') }}">{{ post.title|e('esc_html') }}</a>
    </h2>
  {% endblock %}

  {% block tease_preview %}
    <p class="excerpt">{{ post.excerpt.length(preview_length|default(12)).force.read_more('')|e('esc_html') }}</p>
  {% endblock %}

  {% block tease_read_more %}
    <a href="{{ post.link|e('esc_url') }}" class="rmcc-button rmcc-button-link rmcc-animation-toggle rmcc-text-capitalize">
      {{ _x('Read more', 'Tease: read more', 'rmcc-theme')|e('esc_html') }} <span class="rmcc-animation-slide-left-small" rmcc-icon="arrow-right"></span>
    </a>
  {% endblock %}

</article>