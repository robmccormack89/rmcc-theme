{% extends "base.twig" %}

{% block styles %}
  <link rel="stylesheet" href="{{theme.link}}/assets/css/lib/swiper-bundle.min.css" />
{% endblock %}

{% block header %}
  <header class="header-muted">
    <div class="header-top-nav uk-position-top uk-position-z-index">
      <div uk-sticky="animation: uk-animation-slide-top; sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent; top: 200">
        {% include 'main-nav.twig' %}
      </div>
    </div>
    <div class="uk-section uk-section-large uk-section-muted theme-border-bottom">
      <div class="uk-container uk-container-small">
        <h1 class="uk-text-bold uk-margin-large-top uk-text-center">{{post.title}}</h1>
      </div>
    </div>
  </header>
{% endblock %}

{% block contentwrap %}
  <div class="uk-section uk-container uk-container-small" data-template="basket.twig">
    {{ post.content }}
  </div>
{% endblock %}

{% block scripts %}
  <script src="{{theme.link}}/assets/js/lib/swiper-bundle.min.js"></script>
  <script type='text/javascript' src='{{theme.link}}/assets/js/basket.js'></script>
{% endblock %}