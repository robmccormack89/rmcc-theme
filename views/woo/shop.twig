{% extends "base.twig" %}

{% block styles %}
  <!-- page header -->
  <style>
    .uk-container-xsmall {
      max-width: 650px;
    }
    .launch-cover-img {
      object-fit: cover;
      width: 100%;
    }
  </style>
  <!-- product tease styles -->
  <style>
    .tease-image .onsale.uk-card-badge {
      position: absolute;
      left: 10px;
      right: auto;
      top: 10px;
      z-index: 1;
    }
    .tease-image .max-tickets.uk-card-badge {
      position: absolute;
      left: auto;
      right: 10px;
      top: 10px;
      z-index: 1;
    }
    .tease-image .finishes.uk-card-badge {
      right: 10px;
      margin-top: 4px;
    }
    .tease-image .onsale.uk-label, .tease-image .finishes.uk-label, .tease-image .max-tickets.uk-label {
      background: #008b96;
      border-radius: 2px;
      color: #fff;
      font-size: .75rem;
      padding: 0px 6px;
      text-transform: uppercase;
    }
    .tease-image .lottery-bage {
      display: none;
    }
    
    .tease-title .uk-h4, .tease-title h4 {
      font-size: 1.15rem;
      line-height: 1.4;
    }
    .tease-title a, .tease-title a.uk-link-reset {
      color: #1c1d1d!important;
    }
    .tease-title .uk-h4,
    .tease-title .uk-h3 {
      margin-bottom: 5px;
    }
  
    .tease-price-rating .price {
      position: relative;
    }
    .tease-price-rating .price bdi {
      color: #1c1d1d;
    }
    .tease-price-rating .price ins, .tease-price-rating .price mark {
      background: #fff0;
      color: #1c1d1d;
      font-size: 1.1rem;
    }
    .tease-price-rating .price del ins {
      position: absolute;
      left: 0;
    }
    .tease-price-rating .price del bdi {
      opacity: 0.5;
      text-decoration: line-through;
      position: absolute;
      left: calc(100% + 10px);
    }
    .tease-price-rating .star-rating {
      margin: 10px 0 0!important;
    }
    .tease-price-rating .star-rating span:before {
      color: #eeaf2e;
    }
    
    .tease-buttons .uk-button-default {
      background-color: transparent;
      border-style: double;
      border-color: #b1b1b1;
      border-width: 3px;
      text-transform: capitalize;
      color: #008b96;
      transition: border-color 150ms;
    }
    .tease-buttons .uk-button-default:hover, .tease-buttons .uk-button-default:focus {
      border-color: #008b96;
    }
  </style>
{% endblock %}

{% block header %}
  <header class="uk-inline">
    <div class="header-top-nav main-nav uk-position-top uk-position-z-index">
      <div uk-sticky="animation: uk-animation-slide-top; sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent uk-light; top: 200">
        {% include 'main-nav.twig' %}
      </div>
    </div>
    <img class="launch-cover-img uk-height-large" src="https://picsum.photos/1920/380?random=1" alt="">
    <div class="uk-overlay-primary uk-position-cover uk-position-cover-padded padded-outset-border">
      <div class="uk-position-center">
        <div class="uk-text-center uk-container uk-container-small">
          <h1 class="uk-text-bold uk-margin-large-top">{{title}}</h1>
          <p class="uk-text-lead">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sed do eiusmod tempor incididunt ut labore.
          </p>
        </div>
      </div>
    </div>
  </header>
{% endblock %}

{% block contentwrap %}
  <section class="uk-section">
    <div class="uk-container">
      
      <div class="shop-breads uk-margin-large-bottom">
        {% do action('woocommerce_before_main_content') %}
      </div>
      
      <div class="shop-toolbar uk-margin-small-bottom">
        {% do action('woocommerce_before_shop_loop') %}
      </div>
      
      {% if products is not empty %}
        <!-- the products grid: use products_grid_columns for controlling the grid widths via the customizer -->
        <div class="products products-grid archive-posts uk-child-width-1-2 uk-child-width-1-3@m" uk-grid="masonry: true">
          {% for post in products %}
            {% include 'tease-product.twig' %}
          {% endfor %}
        </div>
      {% endif %}
      
      {% if products is empty %}
        <!-- if products is empty, do the defaukt woo action for no products found -->
        {% do action('woocommerce_no_products_found') %}
      {% endif %}
      
      <!-- include pagination with settings -->
      {% include 'pagination.twig' with pagination %}
      
      {% do action('woocommerce_after_shop_loop') %}

      {% do action('woocommerce_after_main_content') %}
      
    </div>
  </section>
{% endblock %}

{% block scripts %}
  <script src="{{theme.link}}/assets/js/woo/shop.js"></script>
{% endblock %}