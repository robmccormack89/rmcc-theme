{% extends "base.twig" %}

{% block styles %}
  <style>
    .uk-container-xsmall {
      max-width: 650px;
    }
    .launch-cover-img {
      object-fit: cover;
      width: 100%;
    }
    
    .price {
      position: relative;
    }
    bdi {
      color: #1c1d1d;
    }
    ins, mark {
      background: #fff0;
      color: #1c1d1d;
    }
    del ins {
      position: absolute;
      left: 0;
    }
    del bdi {
      opacity: 0.5;
      text-decoration: line-through;
      position: absolute;
      left: calc(100% + 10px);
    }
    .tease-title .uk-h4, .tease-title h4 {
      font-size: 1.15rem;
      line-height: 1.4;
    }
    .tease-title a, .tease-title a.uk-link-reset {
      color: #1c1d1d!important;
    }
    /* .product-price__compare {
      margin-left: 0.3em;
      opacity: 0.5;
      text-decoration: line-through;
    } */
    

    .woocommerce .star-rating span:before {
      color: #efdc38;
    }
    .woocommerce .products .star-rating {
      margin: 10px 0 0;
    }

  </style>
{% endblock %}

{% block header %}
  <header class="uk-inline">
    <div class="header-top-nav main-nav uk-position-top uk-position-z-index">
      <div uk-sticky="animation: uk-animation-slide-top; sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent uk-light; top: 200">
        {% include 'main-nav.twig' %}
      </div>
    </div>
    <img class="launch-cover-img uk-height-large" src="https://picsum.photos/1920/380?random=1" alt="">
    <div class="uk-overlay-primary uk-position-cover uk-position-cover-padded padded-outset-border">
      <div class="uk-position-center">
        <div class="uk-text-center uk-container uk-container-small">
          <h1 class="uk-text-bold uk-margin-large-top">{{title}}</h1>
          <p class="uk-text-lead">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sed do eiusmod tempor incididunt ut labore.
          </p>
        </div>
      </div>
    </div>
  </header>
{% endblock %}

{% block contentwrap %}
  <section class="uk-section">
    <div class="uk-container">
      
      <!-- shop toolbar/filtering form: we will use this with query parameters to filter the shop -->
      <form class="shop-toolbar uk-form-stacked uk-margin-medium-bottom">
        <div class="uk-child-width-auto uk-grid-small" uk-grid>
          <div class="filtering-category">
            <label class="uk-form-label uk-text-bold uk-text-emphasis" for="form-stacked-select">FILTER</label>
            <div class="uk-form-controls">
              <select class="uk-select uk-form-width-medium" id="form-stacked-select">
                <option selected>All</option>
                <option>Option 02</option>
              </select>
            </div>
          </div>
          <div class="filtering-sorting">
            <label class="uk-form-label uk-text-bold uk-text-emphasis" for="form-stacked-select">SORTING</label>
            <div class="uk-form-controls">
              <select class="uk-select uk-form-width-medium" id="form-stacked-select">
                <option selected>Most Popular</option>
                <option>Recently Added</option>
              </select>
            </div>
          </div>
        </div>
      </form>
      
      {% if products is not empty %}
        <!-- the products grid: use products_grid_columns for controlling the grid widths via the customizer -->
        <div class="products products-grid archive-posts uk-child-width-1-2 uk-child-width-1-3@m" uk-grid="masonry: true">
          {% for post in products %}
            {% include 'tease-product.twig' %}
          {% endfor %}
        </div>
      {% endif %}
      
      {% if products is empty %}
        <!-- if products is empty, do the defaukt woo action for no products found -->
        {% do action('woocommerce_no_products_found') %}
      {% endif %}
      
      <!-- include pagination with settings -->
      {% include 'pagination.twig' with pagination %}
      
    </div>
  </section>
{% endblock %}