{# translation-ready, escaped, formatted, semantic #}
{% if product_tabs %}
  <div class="woocommerce-tabs wc-tabs-wrapper uk-grid-collapse" uk-grid>
    
    <div class="uk-width-1-3@m">
      <ul class="uk-tab-left" uk-tab="connect: #tabContent">
        {% for key,product_tab in product_tabs %}
          <li class="tab_id_{{product_tab.callback|e('esc_html')}}">
            <a href="#">
              {% filter apply_filters( 'woocommerce_product_' ~ key ~ '_tab_title', key) %}
                {{ product_tab.title|e('wp_kses_post') }}
              {% endfilter %}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <div class="uk-width-2-3@m">
      <ul id="tabContent" class="uk-switcher">
        {% for key,product_tab in product_tabs %}
          <li class="tab_id_{{product_tab.callback|e('esc_html')}}">
            <div class="tab-content">
              {% if product_tab.callback is defined %}
                {{ fn( 'call_user_func', product_tab.callback, key, product_tab ) }}
              {% endif %}
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
    
    {% do action('woocommerce_product_after_tabs') %}
    
  </div>
{% endif %}