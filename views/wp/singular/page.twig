{% extends "base.twig" %}

{% block content %}
<div class="" data-block="content" data-template="page.twig">
  <div class="content-area uk-section uk-section-muted">
    <div class="uk-container uk-container-small">
      <div uk-grid>
        <article id="post-{{post.ID}}" class="uk-article uk-width-1-1 {{post.class}}">
          <div id="MainTitle">
            <h1 class="uk-text-bold dark-text uk-text-center uk-margin-bottom"><span>{{ post.title }}</span></h1>
          </div>
          <div id="MainContent" class="uk-card uk-card-body uk-background-default uk-margin-bottom">
            {{ post.content }}
          </div>
        </article>
      </div>
    </div>
  </div>
</div>
{% endblock %}