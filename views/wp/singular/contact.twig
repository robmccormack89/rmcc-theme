{% extends 'base.twig' %}

{% block pageheader %}
  <section id="PageTitleSection" class="uk-section uk-background-muted">
    <div class="uk-container uk-text-center">
      <h1 class="uk-text-uppercase uk-h2 uk-text-muted">{{ post.title }}</h1>
    </div>
  </section>
{% endblock %}

{% block contentwrap %}
  <div class="uk-container" data-template="contact.twig">
    <div class="content-area uk-section uk-section-small">
      <div class="uk-container uk-container-small">
        <article id="page-{{post.ID}}" class=" uk-article {{post.class}}">

          <div class="article-content">
            
            <div uk-grid>
            
              <div class="uk-width-2-3@m">
                
                <h3>Email us:</h3>
              
                <ul uk-tab uk-switcher>
                  <li><a href="#">General Information</a></li>
                  <li><a href="#">Orders</a></li>
                  <li><a href="#">Deliveries</a></li>
                </ul>
                
                <ul class="uk-switcher uk-margin">
                  <li>{{ function('do_shortcode', '[contact-form-7 id="14" title="Information"]') }}</li>
                  <li>{{ function('do_shortcode', '[contact-form-7 id="8307" title="Orders"]') }}</li>
                  <li>{{ function('do_shortcode', '[contact-form-7 id="8308" title="Deliveries"]') }}</li>
                </ul>
              
              </div>
              
              <div class="uk-width-1-3@m">
              
                <h4>Our Office:</h4>
              
                <p>
                  Some Address, Some Town,,<br>
                  Some County, Some Country,<br>
                  Eircode & RBN.
                </p>
                
                <h4>Contact Info:</h4>
              
                <p>
                  <a href="#">info@masseyfergusontractors.ie</a>
                </p>
              
              </div>
              
            </div>

          </div>
      
        </article>
      </div>
    </div>
  </div>
{% endblock  %}

{% block abovefooter %}
