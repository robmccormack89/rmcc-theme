{% extends "base.twig" %}

{% block header %}
  <header class="header-muted">
    <div class="header-top-nav uk-position-top uk-position-z-index">
      <div uk-sticky="animation: uk-animation-slide-top; sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent; top: 200">
        {% include 'main-nav.twig' %}
      </div>
    </div>
    <div class="uk-section uk-section-large uk-section-muted theme-border-bottom">
      <div class="uk-container uk-container-xsmall uk-text-center">
        <h1 class="uk-margin-large-top">{{post.title}}</h1>
        <p class="uk-text-uppercase uk-margin-bottom-remove uk-text-emphasis">{{post.date}}</p>
      </div>
    </div>
  </header>
{% endblock %}

{% block contentwrap %}
  <article id="Post{{post.id}}" class="uk-section {{post.class}}">
    {# if post.thumbnail #}
      <section class="single-thumbnail uk-container uk-container-small uk-margin-medium-bottom">
        <figure>
          <img 
          class="uk-border-rounded" 
          data-src="{{ post.thumbnail.src|resize(900, 700)|default('https://picsum.photos/900/700?random=' ~ loop.index) }}" 
          width="900" height="700" alt="{{post.thumbnail.alt}}" 
          uk-img>
        </figure>
      </section>
    {# endif #}
    <section class="single-content uk-container uk-container-xsmall uk-margin-medium-bottom">
      {{post.content}}
    </section>
    <section class="single-meta uk-container uk-container-xsmall">
      <div class="uk-grid-match uk-flex uk-flex-middle">
      <div class="uk-width-expand">
        <div>
          <span class="uk-text-meta">Written by:</span> <a href="#">Admin</a>
        </div>
      </div>
      <div class="uk-width-auto">
        <div>
          <div class="social-icons uk-grid-small uk-child-width-auto" uk-grid>
            <div>
              <a href="https://www.facebook.com/sharer.php?u={{post.link}}">
                <i class="fab fa-facebook-f"></i>
              </a>
            </div>
            <div>
              <a href="https://twitter.com/share?text=Iconic%20design%20meets%20advanced%20materials&url={{post.link}}">
                <i class="fab fa-twitter"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    </section>
    <section class="single-pagination uk-container uk-container-xsmall uk-margin-medium-top">
      <div class="article-pagination uk-child-width-1-2" uk-grid>
    
      <div class="prev-article uk-text-left">
        {% if post.next %}
          <a href="{{ post.next.link|e('esc_url') }}" class="uk-link-reset">
            <div class="uk-text-emphasis">
              <i class="fas fa-angle-left"></i> {{ _x('Previous Article', 'Blog post - Previous article text', 'cautious-octo-fiesta')|e('esc_html') }}
            </div>
            <div class="uk-text-small uk-text-italic uk-width-large uk-visible@m">{{ post.next.title }}</div>
          </a>
        {% endif %}
      </div>
      
      <div class="next-article uk-text-right">
        {% if post.prev %}
          <a href="{{ post.prev.link|e('esc_url') }}" class="uk-link-reset">\
            <div class="uk-text-emphasis">
              {{ _x('Next Article', 'Blog post - Next article text', 'cautious-octo-fiesta')|e('esc_html') }} <i class="fas fa-angle-right"></i>
            </div>
            <div class="uk-text-small uk-text-italic uk-width-large uk-visible@m">{{ post.prev.title }}</div>
          </a>
        {% endif %}
      </div>
  
    </div>
    </section>
    {% if fn('comments_open') %}
      <section class="single-comments uk-container uk-container-xsmall uk-margin-medium-top">
        <div class="article-comments uk-margin-medium-bottom">
          {% include "comments.twig" %}
        </div>
      </section>
    {% endif %}
  </article>
{% endblock %}