{% extends "base.twig" %}

{% block contentwrap %}
  <div data-block="content-wrap" data-template="index.twig">
    
    <div class="blog-wrap">
      
      <div uk-grid>
        
        <div class="uk-width-auto@s">
          <h1 class="uk-text-bold dark-text">{{ title }}</h1>
        </div>
        
        {% if is_posts %}
        <div class="page_nav uk-width-expand@s uk-inline">
          <div class="uk-position-center-right uk-visible@s">
            <ul class="uk-subnav uk-margin-remove-bottom">
              
              {% for item in blogcats %}
              
              {% if current_cat_id == item.term_id %}
              {% set active_class = 'uk-active' %}
              {% else %}
              {% set active_class = 'not-active' %}
              {% endif %}
              
              <li id="{{ item.term_id }}" class="{{active_class}}"><a href="{{ function('get_term_link', item.slug, 'category') }}" class="uk-text-uppercase font-600">{{ item.name }}</a></li>
              {% endfor %}
              
              {% if is_category %}
              <li id="" class=""><a href="{{ posts_page_url }}" class="uk-text-uppercase font-600">All</a></li>
              {% endif %}
              
            </ul>
          </div>
          <div class="uk-hidden@s">
            <ul class="uk-subnav uk-margin-remove-bottom">
              {% for item in blogcats %}
              {% if cat_id == item.term_id %}
                {% set active_class = 'uk-active' %}
              {% else %}
                {% set active_class = 'not-active' %}
              {% endif %}
              <li id="{{ item.term_id }}" class="{{active_class}}"><a href="{{ catbase }}/{{ item.slug }}" class="uk-text-uppercase font-600">{{ item.name }}</a></li>
              {% endfor %}
              {% if is_category %}
              <li id="" class=""><a href="{{ posts_page_url }}" class="uk-text-uppercase font-600">All</a></li>
              {% endif %}
            </ul>
          </div>
        </div>
        {% endif %}
        
      </div>
      
      <div class="uk-child-width-1-2@s uk-child-width-1-3@m archive-posts margin-top-30" uk-grid="masonry: true">
        {% for post in posts %}
          {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
        {% endfor %}
        {% if posts is empty %}
        <p class="uk-text-emphasis">Nothing posted here yet....</p>
        {% endif %}
      </div>
      
      {% if is_paginated %}
        {% include 'pagination.twig' %}
      {% endif %}
      
    </div>
      
  </div>
{% endblock %}

{% block spec_scripts %}
  {% if is_paginated %}
    <script src="/wp-content/themes/sixstar-theme/assets/js/main/scroll.js"></script>
  {% endif %}
{% endblock %}