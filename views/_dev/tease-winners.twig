<div id="post-{{post.ID}}" class="the-post item {{ post.class }}" data-template="tease-winners.twig">
  <div class="uk-card uk-card-default">
    <div class="uk-card-media-top fat-border-bottom">
      {% if post.get_thumbnail %}
      <a title="{{ post.thumbnail.title }}" uk-toggle="target: #modal-post-{{post.ID}}">
        <img data-src="{{ post.thumbnail.src }}" width="800" height="300" alt="{{ post.thumbnail.alt }}" uk-img>
      </a>
      {% endif %}
    </div>
    <div class="uk-card-body uk-padding-small">
      <h3 class="uk-card-title uk-margin-small-top">{{post.title}}</h3>
      <p>{{post.date | date}}</p>
    </div>
  </div>
</div>
<div id="modal-post-{{post.ID}}" class="uk-flex-top uk-modal" uk-modal>
  <div class="uk-modal-dialog uk-margin-auto-vertical">
    <button class="uk-modal-close-default uk-icon uk-close" type="button" uk-close=""></button>
    <div class="uk-modal-header fat-border-bottom">
      <h2 class="uk-modal-title">{{post.title}}</h2>
    </div>
    <div class="fat-border-bottom">
      <img data-src="{{ post.thumbnail.src }}" width="800" height="300" alt="{{ post.thumbnail.alt }}" uk-img>
    </div>
    <div class="uk-modal-body">
      <p>{{post.content}}</p>
    </div>
  </div>
</div>