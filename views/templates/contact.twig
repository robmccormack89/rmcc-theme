{% extends 'base.twig' %}

{% block pageheader %}
  {% include 'header-page.twig' %}
{% endblock %}

{% block contentwrap %}
  <div class="uk-container" data-template="contact.twig">
    <div class="content-area uk-section uk-section-small">
      <div class="uk-container uk-container-small">
        <article id="page-{{post.id|e('html_attr')}}" class=" uk-article {{post.class|e('html_attr')}}">

          <div class="article-content">
            
            <div uk-grid>
            
              <div class="uk-width-2-3@m">
                
                <h3>Email us:</h3>
              
                <ul uk-tab uk-switcher>
                  <li><a href="#">General Information</a></li>
                  <li><a href="#">Orders</a></li>
                  <li><a href="#">Deliveries</a></li>
                </ul>
                
                <ul class="uk-switcher uk-margin">
                  <li>{{ function('do_shortcode', '[contact-form-7 id="14" title="Information"]') }}</li>
                  <li>{{ function('do_shortcode', '[contact-form-7 id="8307" title="Orders"]') }}</li>
                  <li>{{ function('do_shortcode', '[contact-form-7 id="8308" title="Deliveries"]') }}</li>
                </ul>
              
              </div>
              
              <div class="uk-width-1-3@m">
              
                <h4>Our Office:</h4>
              
                <p>
                  {{base_address|e('esc_html')}}, {{base_address_2|e('esc_html')}},<br>
                  {{base_city|e('esc_html')}}, {{base_county|e('esc_html')}},<br>
                  {{base_eircode|e('esc_html')}}.
                </p>
                
                <h4>Contact Info:</h4>
              
                <p>
                  <a href="mailto:{{display_email|e('html_attr')}}">{{display_email|e('html_attr')}}</a>
                </p>
              
              </div>
              
            </div>

          </div>
      
        </article>
      </div>
    </div>
  </div>
{% endblock  %}

{% block abovefooter %}
  {% include 'above-footer-page.twig' %}
{% endblock %}