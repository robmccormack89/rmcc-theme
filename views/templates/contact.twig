{% extends 'base.twig' %}

{% block pageheader %}
  {% include 'header-page.twig' %}
{% endblock %}

{% block breads %}
  <div class="breads-container uk-container uk-container-small">
    {% include 'breads.twig' %} 
  </div>
{% endblock %}

{% block contentwrap %}
  <div class="uk-container" data-template="contact.twig">
    <div class="content-area uk-section uk-section-small">
      <div class="uk-container uk-container-small">
        <article id="page-{{post.id|e('html_attr')}}" class=" uk-article {{post.class|e('html_attr')}}">

          <div class="article-content">
            
            <div uk-grid>
            
              <div class="uk-width-2-3@m">
                
                <h3>{{ __('Email us:', 'cautious-octo-fiesta') }}</h3>
              
                <ul uk-tab uk-switcher>
                  <li><a href="#">{{ __('General Enquiries', 'cautious-octo-fiesta') }}</a></li>
                  <li><a href="#">{{ __('Current Customers', 'cautious-octo-fiesta') }}</a></li>
                  <li><a href="#">{{ __('Support', 'cautious-octo-fiesta') }}</a></li>
                </ul>
                
                <ul class="uk-switcher uk-margin">
                  <li>{{ function('do_shortcode', '[contact-form-7 title="General Enquiries"]') }}</li>
                  <li>{{ function('do_shortcode', '[contact-form-7 title="Current Customers"]') }}</li>
                  <li>{{ function('do_shortcode', '[contact-form-7 title="Support"]') }}</li>
                </ul>
              
              </div>
              
              <div class="uk-width-1-3@m">
              
                <h4>{{ __('Our Office:', 'cautious-octo-fiesta') }}</h4>
              
                <p>
                  {{base_address|e('esc_html')|default('Some Street')}}, {{base_address_2|e('esc_html')|default('Some Place')}},<br>
                  {{base_city|e('esc_html')|default('Some City')}}, {{base_county|e('esc_html')|default('Some County')}},<br>
                  {{base_eircode|e('esc_html')|default('Some Eircode')}}.
                </p>
                
                <h4>{{ __('Contact Info:', 'cautious-octo-fiesta') }}</h4>
              
                <p>
                  <a href="mailto:{{display_email|e('html_attr')|default('info@hello.com')}}">{{display_email|e('html_attr')|default('info@hello.com')}}</a>
                </p>
              
              </div>
              
            </div>

          </div>
      
        </article>
      </div>
    </div>
  </div>
{% endblock  %}

{% block abovefooter %}
  {% include 'above-footer-page.twig' %}
{% endblock %}