{# translation-ready, escaped, formatted, semantic #}
{% if post._lottery_dates_to and not post._lottery_closed %}
  <div class="finishes uk-text-small uk-grid-collpase uk-grid-match uk-flex uk-flex-middle" uk-grid>
    <div class="completion_meta uk-width-expand">
      {% if post._lottery_dates_to|days_left > 14 %}
        <span class="uk-text-meta">{{ _x('Just over %s left'|format(post._lottery_dates_to|date("U")|time_left), 'Product tease', 'dream-winners')|e('esc_html') }}</span>
      {% elseif post._lottery_dates_to|days_left <= 14 and post._lottery_dates_to|days_left > 0 %}
        <span class="uk-text-warning">{{ _x('Just over %s left!'|format(post._lottery_dates_to|date("U")|time_left), 'Product tease', 'dream-winners')|e('esc_html') }}</span>
      {% elseif post._lottery_dates_to|days_left == 0 %}
        <span class="uk-text-danger">{{ _x('Just %s left!!!'|format(post._lottery_dates_to|date("U")|time_left), 'Product tease', 'dream-winners')|e('esc_html') }}</span>
      {% endif %}
    </div>
    <div class="tickets-meta uk-width-auto">
      {% if tickets_left(post._max_tickets, post._lottery_participants_count) > 25 %}
        <span class="uk-text-meta">{{ _x('%s tickets left'|format(tickets_left(post._max_tickets, post._lottery_participants_count)), 'Product tease', 'dream-winners')|e('esc_html') }}</span>
      {% elseif tickets_left(post._max_tickets, post._lottery_participants_count) <= 25 and tickets_left(post._max_tickets, post._lottery_participants_count) > 10 %}
        <span class="uk-text-warning">{{ _x('Just %s tickets left!'|format(tickets_left(post._max_tickets, post._lottery_participants_count)), 'Product tease', 'dream-winners')|e('esc_html') }}</span>
      {% elseif tickets_left(post._max_tickets, post._lottery_participants_count) <= 10 %}
        <span class="uk-text-danger">{{ _x('Only %s tickets left!!!'|format(tickets_left(post._max_tickets, post._lottery_participants_count)), 'Product tease', 'dream-winners')|e('esc_html') }}</span>
      {% endif %}
    </div>
  </div>
{% endif %}