{% extends "base.twig" %}

{% block header %}
  <header class="uk-background-default" data-template="page.twig" data-block="header">
    <div uk-sticky="animation: uk-animation-slide-top; sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent; top: 200">
      {% include 'header-nav.twig' %}
    </div>
  </header>
{% endblock %}

{% block contentwrap %}
  <section class="uk-section uk-container">
    <h1 class="uk-margin-large-bottom uk-heading-small">{{title|e('esc_html')}}</h1>
    <div class="blog-list archive-posts uk-child-width-1-1 uk-grid-collapse" uk-grid>
        {% if posts is not empty %}
          {% for post in posts %}
            {% include '_tease.twig' %}
          {% endfor %}
        {% else %}
          No posts found...
        {% endif %}
      </div>
    {% if (pagination.next or pagination.prev) %}
      <div class="uk-margin-xlarge-top">
        {% include '_pagination.twig' %}
      </div>
    {% endif %}
  </section>
{% endblock %}