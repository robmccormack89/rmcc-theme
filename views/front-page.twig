{% extends "base.twig" %}

{% block header %}
  <header class="uk-inline">
    
    <div class="header-top-nav uk-position-top uk-position-z-index">
      <div uk-sticky="animation: uk-animation-slide-top; sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent uk-light uuk-overlay-default; top: 200">
        {% include 'header-nav.twig' %}
      </div>
    </div>
    
    <img 
    class="cover-img home-cover-img" 
    data-src="{{post.thumbnail.src|resize(1920)|default(options.site_featured_image.url|resize(1920))|default(theme.link ~ '/assets/images/clean_room_cover.jpg')|e('esc_url')}}" 
    alt="{{post.thumbnail.alt|default(options.site_featured_image.alt)|e('esc_html')}}" 
    data-width data-height 
    uk-img>
    
    <div class="uk-overlay-primary uk-position-cover uk-padding-small">
      <div class="uk-position-center">
        <div class="uk-text-center uk-container uk-container-xsmall uk-padding">
          <h1 class="uk-margin-large-top">
            {{ __('Welcome to', 'serchek-theme')|e('esc_html') }} {{site.title}}
          </h1>
          <hr class="uk-divider-small">
          <p class="uk-text-emphasis uk-text-lead uk-margin-medium-bottom">
            {{ __('Clean Room Doors by Serchek Industrial Ireland Ltd', 'serchek-theme')|e('esc_html') }}
          </p>
          <a href="#Next" class="uk-button uk-button-primary uk-button-large scroll">
            {{ __('Learn more', 'serchek-theme')|e('esc_html') }}
          </a>
        </div>
      </div>
    </div>
    
  </header>
{% endblock %}

