{% extends "base.twig" %}

{% block styles %}
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&family=Norican&display=swap" rel="stylesheet">
  <!-- font styles -->
  <style>
    html {
      font-family: font-family: 'Lato', sans-serif;
    }
    .uk-h1, .uk-h2, .uk-h3, .uk-h4, .uk-h5, .uk-h6, .uk-heading-2xlarge, .uk-heading-large, .uk-heading-medium, .uk-heading-small, .uk-heading-xlarge, h1, h2, h3, h4, h5, h6 {
      font-family: 'Lato', sans-serif;
    }
    .uk-navbar-item, .uk-navbar-nav>li>a, .uk-navbar-toggle {
      font-family: 'Lato', sans-serif;
    }
    .norican {
      font-family: 'Norican', cursive;
    }
  </style>
  <style>
    .hero-img {
      object-fit: cover;
      width: 100%;
      height:80vh;
    }
    .img-obj-fit {
      object-fit: cover;
      width: 100%;
      height: 100%;
    }
    .uk-container-xsmall {
      max-width: 550px;
    }
    .uk-button-large {
      font-size: .875rem;
      line-height: 45px;
      padding: 0 30px;
      border-width: 2px;
      border-style: solid;
      font-weight: 500;
    }
    .uk-section-primary {
      background: #152242;
    }
    .uk-button-primary {
      background-color: #152242;
      border: 1px solid transparent;
      color: #fff;
    }
    .uk-text-emphasis, .subscribe-section .far {
      color: #152242!important;
    }
    .uk-h1, .uk-h2, .uk-h3, .uk-h4, .uk-h5, .uk-h6, .uk-heading-2xlarge, .uk-heading-large, .uk-heading-medium, .uk-heading-small, .uk-heading-xlarge, h1, h2, h3, h4, h5, h6 {
        color: #152242;
    }
    .feature-link {
      font-weight: 500;
      display: inline-block;
      position: relative;
    }
    .feature-link:hover {
      text-decoration: none;
    }
    .feature-link:after {
      content: '';
      display: block;
      border-top: 2px solid;
      transition: all 250ms;
    }
    .feature-link:hover::after {
      transform: scaleX(0.8);
    }
    
    .uk-navbar-nav>li>a {
      text-transform: capitalize;
    }
    .uk-light .uk-navbar-nav>li>a {
      color: #fff;
    }
    .uk-navbar-item, .uk-navbar-nav>li>a, .uk-navbar-toggle {
      font-size: 1rem;
      min-height: auto;
      padding: 0 15px;
    }
    .uk-logo {
      font-size: 2.8rem;
    }
    svg.user {
      fill: transparent;
      stroke: currentColor;
      stroke-width: 2px;
    }
    
    svg.search, svg.search, svg.basket, svg.basket {
      fill: currentColor;
      vertical-align: top;
    }
    
    /* UIKit based resonsive breakpoints */
    @media only screen and (max-width:959px) {
      .header-icons .uk-navbar-item, .header-icons.uk-navbar-nav>li>a, .header-icons .uk-navbar-toggle {
        padding: 0 10px;
      }
      .uk-logo {
        font-size: 1.5rem;
      }
    }
    
    .main-nav.uk-navbar-nav>li>a {
      position: relative;
    }
    
    .main-nav.uk-navbar-nav>li>a:after {
      content: "";
      position: absolute;
      width: 0;
      bottom: -3px;
      background-color: currentColor;
      height: 2px;
      transition: opacity .3s, width .3s;
      opacity: 0;
    }
    .main-nav.uk-navbar-nav>li>a:hover:after {
      width: calc(100% - 2em);
      opacity: 1;
    }
    
    @media (min-width: 960px){
      .uk-container-expand {
        padding-left: 20px;
        padding-right: 20px;
      }
    }
    
    .uk-navbar-sticky.uk-section-small {
      padding-bottom: 20px;
      padding-top: 20px;
    }
    
    .uk-navbar-sticky {
      box-shadow: 0 5px 15px rgb(0 0 0 / 8%);
    }
    
    .uk-navbar-container:not(.uk-navbar-transparent) {
      background: #ffffff;
    }
    
    .uk-form-large:not(textarea):not([multiple]):not([size]) {
      height: 49px;
    }
    
    .uk-navbar-container {
      padding-left: 5px;
      padding-right: 5px;
    }
    
    @media (max-width: 959px){
      .subscribe-section .uk-button {
        margin-top: 5px;
        width: 100%;
      }
    }
  </style>
{% endblock %}

