{% if fn('has_nav_menu', 'main_menu') %}
  {% for item in menu_main.get_items %}
    {% if item.children %}
      <li class="rmcc-visible@m {{ item.classes|join(' ')|e('esc_html') }}">
        <a href="{{ item.link|e('esc_url') }}">{{ item.title|e('esc_html') }}</a>
        <div rmcc-dropdown>
          <ul class="rmcc-nav rmcc-dropdown-nav">
            {% for child in item.children %}
              <li class="{{ child.classes|join(' ')|e('esc_html') }}">
                <a href="{{ child.link|e('esc_url') }}">{{ child.title|e('esc_html') }}</a>
                {% if child.children %}
                  <div rmcc-dropdown="pos: right-top">
                    <ul class="rmcc-nav rmcc-dropdown-nav">
                      {% for third in child.children %}
                        <li class="{{ third.classes|join(' ')|e('esc_html') }}">
                          <a href="{{ third.link|e('esc_url') }}">{{ third.title|e('esc_html') }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </div>
      </li>
    {% else %}
      <li class="rmcc-visible@m {{ item.classes|join(' ')|e('esc_html') }}">
        <a href="{{ item.link|e('esc_url') }}">{{ item.title|e('esc_html') }}</a>
      </li>
    {% endif %}
  {% endfor %}
{% endif %}