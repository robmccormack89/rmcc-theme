<footer class="rmcc-background-secondary darken">
  <div class="rmcc-section-secondary rmcc-light rmcc-border-rounded rmcc-box-shadow-medium">
    <div class="rmcc-container rmcc-container-xlarge">
      <div class="rmcc-padding rmcc-padding-remove-horizontal">

        <div rmcc-grid>
          <div class="rmcc-width-2-5@m">
            <div>
              <div rmcc-grid>
                <div class="rmcc-width-4-5@l">
                  <div>
                    {# <a class="rmcc-logo" href="#">
                      <img class="rmcc-padding-small" src="public/images/logo-dark.png" width="180" height="60" alt="">
                    </a> #}
                    <a class="rmcc-logo" href="{{ site.link|e('esc_url') }}">
                      {% if theme.logo %}
                        <img class="rmcc-padding-small" src="{{ theme.logo.src|e('esc_url') }}" width="180" height="60" alt="{{ theme.logo.alt|e('esc_html') }}">
                      {% else %}
                        {{ site.title|e('esc_html') }}
                      {% endif %}
                    </a>
                    <p class="rmcc-text-small">{{ _x('Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.', 'Company: bio', 'rmcc-theme')|e('esc_html') }}</p>
                    {% if fn('has_nav_menu', 'footer_menu_1') %}
                      <div class="rmcc-margin-top">
                        {% for item in footer_menu_1.get_items %}
                          {% if loop.last and footer_menu_1.get_items|length > 1 %}
                            <a class="rmcc-button rmcc-button-large rmcc-border-rounded rmcc-button-danger {{item.class}}" href="{{ item.link|e('esc_url') }}">{{ item.title|e('esc_html')}} <span rmcc-icon="icon:arrow-right;ratio:1" class="rmcc-icon"></span></a>
                          {% else %}
                            <a class="rmcc-button rmcc-button-large rmcc-border-rounded rmcc-button-danger {{item.class}} {% if footer_menu_1.get_items|length > 1 %}rmcc-margin-small-right{% endif %}" href="{{ item.link|e('esc_url') }}">{{ item.title|e('esc_html')}}</a>
                          {% endif %}
                        {% endfor %}
                      </div>
                    {% endif %}
                  </div>
                </div>
                <div class="rmcc-width-1-5 rmcc-visible@l"></div>
              </div>
            </div>
          </div>
          <div class="rmcc-width-3-5">
            <div>
              <div class="rmcc-grid-small" rmcc-grid>
                {% if fn('has_nav_menu', 'footer_menu_2') %}
                  <div class="rmcc-width-1-3@m">
                    <div>
                      <h4 class="rmcc-text-fat">{{ footer_menu_2.title|e('esc_html') }}</h4>
                      <ul class="rmcc-list">
                        {% for item in footer_menu_2.get_items %}
                          <li><span rmcc-icon="chevron-right" class="rmcc-icon rmcc-text-green rmcc-margin-right"></span>{{ item.title|e('esc_html')}}</li>
                        {% endfor %}
                      </ul>
                    </div>
                  </div>
                {% endif %}
                {% if fn('has_nav_menu', 'footer_menu_3') %}
                  <div class="rmcc-width-1-3@m">
                    <div>
                      <h4 class="rmcc-text-fat">{{ footer_menu_3.title|e('esc_html') }}</h4>
                      <ul class="rmcc-list">
                        {% for item in footer_menu_3.get_items %}
                          <li><span rmcc-icon="chevron-right" class="rmcc-icon rmcc-text-green rmcc-margin-right"></span>{{ item.title|e('esc_html')}}</li>
                        {% endfor %}
                      </ul>
                    </div>
                  </div>
                {% endif %}
                <div class="rmcc-width-1-3@m">
                  <div>
                    <h4 class="rmcc-text-fat">Contact</h4>
                    <ul class="rmcc-list">
                      <li>
                        <div class="rmcc-grid-small" rmcc-grid>
                          <div class="rmcc-width-auto"><span rmcc-icon="location" class="rmcc-icon rmcc-text-green"></span></div>
                          <div class="rmcc-width-expand">
                            {{ _x('123 Main Street, Orange County, Ohio, USA', 'Company: address', 'rmcc-theme')|e('esc_html') }}
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="rmcc-grid-small" rmcc-grid>
                          <div class="rmcc-width-auto"><span rmcc-icon="mail" class="rmcc-icon rmcc-text-green"></span></div>
                          <div class="rmcc-width-expand">
                            {{ _x('admin@example.ie', 'Company: email', 'rmcc-theme')|e('esc_html') }}
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="rmcc-grid-small" rmcc-grid>
                          <div class="rmcc-width-auto"><span rmcc-icon="receiver" class="rmcc-icon rmcc-text-green"></span></div>
                          <div class="rmcc-width-expand">
                            {{ _x('032 12 33456', 'Company: phone', 'rmcc-theme')|e('esc_html') }}
                          </div>
                        </div>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="rmcc-container rmcc-container-xlarge rmcc-light">
    <div class="rmcc-padding-small rmcc-padding-remove-horizontal rmcc-text-center rmcc-text-small">Copyright Â© 2025. <span class="rmcc-text-underline rmcc-text-emphasis">{{ _x('The Big Company LTD.', 'Company: full name', 'rmcc-theme')|e('esc_html') }}</span> All Rights Reserved. {{ _x('Company No. 1234567890', 'Company: registration', 'rmcc-theme')|e('esc_html') }}</div>
  </div>
</footer>