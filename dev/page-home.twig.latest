{% extends "base.twig" %}

{% block content %}

{% set slider_group = options.homepage_slider %}
{% set how_to_group = options.homepage_how_to_play_blocks %}
{% set featured_comps_group = options.homepage_featured_competitions %}
{% set cta_group = options.homepage_cta_block %}

<div data-block="content" data-template="page-home.twig" class="uk-margin-large-bottom">

  <section class="slider-section uk-section uk-section-muted uk-section-small">
    
    <div class="uk-container">
        
      <div class="home-slider uk-position-relative uk-visible-toggle uk-light uk-animation-slide-right" tabindex="-1" uk-slider="autoplay: false; center: true">
      
          <ul class="uk-slider-items uk-grid uk-grid-match">

            {% for slides in slider_group %}
            
              {% for slide in slides %}
              
              <li class="uk-width-3-4@m uk-cover-container">
                <div class="uk-background-cover uk-panel uk-flex slider-image" style="background-image: url({{ Image(slide.slide_image) }});">
                <div class="uk-container uk-flex-auto uk-position-relative">
                  <div class="uk-position-cover uk-overlay uk-overlay-primary uk-light">
                    <div class="uk-text-center uk-position-center">
                      <h2>{{slide.slide_heading}}</h2>
                      <p>{{slide.slide_description}}</p>
                      <a href="{{slide.slide_button_link}}" class="uk-button uk-button-primary">{{slide.slide_button_text}}</a>
                    </div>
                  </div>
                </div>
                </div>
              </li>
              
              {% endfor %}
            
            {% endfor %}

          </ul>
      
          <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
          <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
      
      </div>
      
    </div>

  </section>
  
  <section class="uk-section uk-section-muted uk-section-small">

    <div class="uk-container">
      
      <div class="uk-child-width-1-3@s uk-grid-small uk-text-center" uk-grid>
        
        {% for how_to_blocks in how_to_group %}
        
          {% for how_to_block in how_to_blocks %}
            
            <div>
              <div class="uk-card uk-card-body uk-background-default uk-text-center">
                <h3 class="uk-heading-large uk-text-primary">{{how_to_block.how_to_number}}</h3>
                <h4>{{how_to_block.how_to_title}}</h4>
                <p>{{how_to_block.how_to_description}}</p>
              </div>
            </div>
          
          {% endfor %}
        
        {% endfor %}
        
      </div>
      
    </div>

  </section>
  
  <section class="uk-section uk-section-muted uk-section-small">

    <div class="uk-container" style="padding-bottom: 50px;">
      
      <h2 class="uk-text-center uk-margin-bottom">{{ featured_comps_group.featured_competitions_title }}</h2>
        
      <div uk-slider>
        <div class="uk-position-relative uk-visible-toggle" tabindex="-1">
          <div class="uk-slider-items uk-child-width-1-2@s uk-child-width-1-3@m uk-grid uk-grid-small">
            
            {% for post in slider_products %}
              {% include 'tease-product.twig' %}
            {% endfor %}
            
          </div>
          <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
          <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
        </div>
        <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
      </div>
      
    </div>

  </section>
  
  <section class="uk-section uk-section-default fat-border-top" style="padding-bottom: 25px;">
    <div class="uk-container">
      <h2 class="uk-text-center uk-margin-medium-bottom">{{ cta_group.cta_title }}</h2>
      <p class="uk-text-center"><a class="uk-button uk-button-primary uk-button-large" href="{{ cta_group.cta_button_link }}">{{ cta_group.cta_button_text }}</a></p>
    </div>
  </section>
  
  
</div>
{% endblock %}